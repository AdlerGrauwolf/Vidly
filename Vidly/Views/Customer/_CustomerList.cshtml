@model IEnumerable<Vidly.Models.Customer>

@if (Model.Count() > 0)
{
    <table class="table	table-bordered	table-hover">
        <thead>
            <tr>
                <th>
                    Customer
                </th>
                <th>
                    Discount Rate
                </th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        @foreach (var customer in Model)
        {
            <tr>                
                <td>
                    @Html.ActionLink(customer.Name, "Edit", "Customer", new { id = customer.Id }, null)
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
                <td>
                    <button type="button" data-customer-id="@customer.Id" class="js-customer-delete glyphicon glyphicon-trash button button-red"></button>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>We don't have any customers yet</p>
}
