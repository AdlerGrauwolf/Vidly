@model IEnumerable<Vidly.Models.Movie>

@if (Model.Count() > 0)
{
    <table class="table	table-bordered	table-hover">
        <thead>
            <tr>
                <th>
                    <strong>Movie</strong>
                </th>
            </tr>
        </thead>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @movie.Name
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>We don't have any customers yet</p>
}